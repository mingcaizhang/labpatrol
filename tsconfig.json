{
    "compilerOptions": {
        "target": "es2016",
        "lib": [ "es2020","DOM" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "inlineSourceMap": true,
        "noImplicitReturns": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*" ]
}
